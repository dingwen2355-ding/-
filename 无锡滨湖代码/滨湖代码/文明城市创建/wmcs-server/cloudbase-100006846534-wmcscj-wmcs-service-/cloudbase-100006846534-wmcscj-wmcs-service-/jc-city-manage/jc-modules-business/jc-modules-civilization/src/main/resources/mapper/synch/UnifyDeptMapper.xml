<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wxgis.jc.civilization.synch.mapper.UnifyDeptMapper">

    <select id="voList" resultType="cn.wxgis.jc.synch.unify.resp.UnifyDeptResponse">
        select d.*, pd.name parentName
        from unify_dept d
        left join unify_dept pd on pd.id = d.parent_id
        <where>
            and d.del_flag = 0
            <if test="name != null and name != ''"> and d.name like concat('%', #{name},'%')</if>
        </where>
        order by d.type desc, d.sort, d.create_time desc
    </select>

    <select id="findByName" resultType="cn.wxgis.jc.synch.unify.po.UnifyDept">
        select * from unify_dept where name = #{name}
    </select>
</mapper>
