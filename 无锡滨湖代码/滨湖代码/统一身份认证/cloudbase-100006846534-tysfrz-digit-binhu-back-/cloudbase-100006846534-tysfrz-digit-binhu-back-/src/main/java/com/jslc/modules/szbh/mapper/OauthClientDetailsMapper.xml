<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jslc.modules.szbh.mapper.OauthClientDetailsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="oauthClientDetailsResultMap" type="com.jslc.modules.szbh.entity.OauthClientDetails">
        <id column="client_id" property="clientId"/>
        <result column="resource_ids" property="resourceIds"/>
        <result column="client_secret" property="clientSecret"/>
        <result column="scope" property="scope"/>
        <result column="authorized_grant_types" property="authorizedGrantTypes"/>
        <result column="web_server_redirect_uri" property="webServerRedirectUri"/>
        <result column="authorities" property="authorities"/>
        <result column="access_token_validity" property="accessTokenValidity"/>
        <result column="refresh_token_validity" property="refreshTokenValidity"/>
        <result column="additional_information" property="additionalInformation"/>
        <result column="autoapprove" property="autoapprove"/>
    </resultMap>

    <delete id="del">
        delete from oauth_client_details where client_id in
        <foreach collection="clientIds" item="id" index="index" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>


    <select id="selectOauthClientDetailsPage" resultMap="oauthClientDetailsResultMap">
        select * from oauth_client_details where is_deleted = 0
    </select>

</mapper>
