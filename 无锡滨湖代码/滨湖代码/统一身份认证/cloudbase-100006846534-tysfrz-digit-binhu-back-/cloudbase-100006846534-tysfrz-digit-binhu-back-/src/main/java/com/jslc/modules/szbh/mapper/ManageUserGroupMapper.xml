<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jslc.modules.szbh.mapper.ManageUserGroupMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="manageUserGroupResultMap" type="com.jslc.modules.szbh.entity.ManageUserGroup">
        <result column="id" property="id"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="name" property="name"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <resultMap id="manageUserGroupVOResultMap" type="com.jslc.modules.szbh.vo.ManageUserGroupVO" extends="manageUserGroupResultMap">

    </resultMap>

    <select id="selectManageUserGroupPage" resultMap="manageUserGroupVOResultMap">
        select * from bh_manage_user_group where is_deleted = 0
        <if test="key != null and key !=''">
            and (name like concat('%',#{key},'%') or id like concat('%',#{key}))
        </if>
    </select>
    <select id="getGroupUserData" resultType="com.jslc.modules.szbh.vo.GroupUserInfoVO">
        select bu.id as userId ,bu.name as userName ,bu.account as userAccount  from bh_manage_user_group bmug
        inner join bh_manage_user bmu on bmu.biz_id = bmug.id
        inner join bh_user bu on bu.id = bmu.bh_user_id
        where bmug.is_deleted = 0 and bmug.id = #{id}
        <if test="userName != null and userName != ''">
            and bu.name like concat('%',#{userName},'%')
        </if>
    </select>

</mapper>
