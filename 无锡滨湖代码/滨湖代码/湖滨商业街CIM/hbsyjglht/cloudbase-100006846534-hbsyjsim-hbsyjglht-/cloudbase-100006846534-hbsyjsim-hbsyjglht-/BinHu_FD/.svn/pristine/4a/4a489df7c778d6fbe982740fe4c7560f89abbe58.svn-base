      handleDelete: function (id) {
        var that = this;
        deleteAction(that.url.delete, {id: id}).then((res) => {
          if (res.success) {
            that.$message.success(res.message);
            that.loadData();
          } else {
            that.$message.warning(res.message);
          }
        });
      },
      loadVideoStatistic(position){
        postAction(this.url.videoStatistic,{position}).then(res=>{
          if(res.success){
            this.chartData=res.result.map(item=>{
              return {type:item.type,value:Number(item.value)}
            })
           // this.selectedAreaCode=this.areaCode[0].value
          }
        })
      },
      handleVideoShow(record){
        this.$refs.videoFlvModal.show(record)
      },
      handleChartAreaCode(record){       
        this.selectedAreaCode=(this.selectedAreaCode==record.value?null:record.value)
        //这里触发查询
        this.loadVideoStatistic(record.value)
      },
      initDictConfig(){
       
        //type：1  系统字典
        getAction('/monitor/video/typeDict',{type:1}).then(res=>{
