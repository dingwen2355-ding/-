<script>
import VideoFlv from "../../../components/Video/videoFlv.vue";
import { JeecgListMixin } from "../../../mixins/JeecgListMixin";
let gridOptions=[{label:'2X2',value:'2X2'},
{label:'2X3',value:'2X3'},
{label:'3X3',value:'3X3'},
{label:'3X4',value:'3X4'},
]
export default {
    components: { VideoFlv },
    mixins:[JeecgListMixin],
    data(){
        return{
        carousel:true,
        grid:[3,3],  // index0==row,  index1==col
        gridOptions,
        dataSource:[]}},
    methods:{
        loadData(){
            this.dataSource=[]
            for(let index=0;index<this.grid[0]*this.grid[1];index++){
                this.dataSource.push({})
            }
        },
        changeGrid(value){
           this.grid=value.split('X')
           this.loadData()
        }
    }
}
</script>

