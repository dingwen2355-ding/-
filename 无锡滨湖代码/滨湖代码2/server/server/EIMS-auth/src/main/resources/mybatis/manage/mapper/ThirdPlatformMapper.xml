<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.znv.manage.dao.ThirdPlatformDao">

    <insert id="add" parameterType="com.znv.manage.common.bean.ThirdPlatformEntity">
        INSERT INTO t_cfg_third_platform (`name`, address, params, `source`, image, remark)
        VALUES (#{name}, #{address}, #{params}, #{source}, #{image}, #{remark})
    </insert>

    <delete id="deleteById" parameterType="long">
        DELETE
        FROM t_cfg_third_platform
        WHERE id = #{id}
    </delete>

    <update id="updateById" parameterType="com.znv.manage.common.bean.ThirdPlatformEntity">
        UPDATE t_cfg_third_platform
        <set>
            <if test="null != name">
                `name` = #{name},
            </if>
            <if test="null != address">
                `address` = #{address},
            </if>
            <if test="null != params">
                `params` = #{params},
            </if>
            <if test="null != name">
                `source` = #{source},
            </if>
            <if test="null != image">
                `image` = #{image},
            </if>
            <if test="null != remark">
                `remark` = #{remark},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="queryList" parameterType="map" resultType="com.znv.manage.common.bean.ThirdPlatformEntity">
        SELECT id,
               `name`,
               address,
               params,
               `source`,
               image,
               remark,
               create_time AS createTime,
               update_time AS updateTime
        FROM t_cfg_third_platform
    </select>

</mapper>