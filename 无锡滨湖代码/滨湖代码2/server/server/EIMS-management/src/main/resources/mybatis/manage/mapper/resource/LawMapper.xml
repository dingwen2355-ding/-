            </if>
            <if test="penaltyBasis != null">
                #{penaltyBasis,jdbcType=VARCHAR},
            </if>
            <if test="standards != null">
                #{standards,jdbcType=VARCHAR},
            </if>
            <if test="accidentType != null">
                #{accidentType,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="com.znv.manage.common.bean.resource.Law">
        update t_data_law
        <set>
            <if test="lawName != null">
                law_name = #{lawName,jdbcType=VARCHAR},
            </if>
            <if test="lawClass != null">
                law_class = #{lawClass,jdbcType=VARCHAR},
            </if>
            <if test="illegalDescription != null">
                illegal_description = #{illegalDescription,jdbcType=VARCHAR},
            </if>
            <if test="legalProvisions != null">
