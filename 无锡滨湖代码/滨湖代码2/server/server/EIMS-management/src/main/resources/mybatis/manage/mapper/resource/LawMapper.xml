                prescribed_terms,
            </if>
            <if test="penaltyBasisClause != null">
                penalty_basis_clause,
            </if>
            <if test="penaltyBasisName != null">
                penalty_basis_name,
            </if>
            <if test="penaltyBasis != null">
                penalty_basis,
            </if>
            <if test="standards != null">
                standards,
            </if>
            <if test="accidentType != null">
                accident_type,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="lawName != null">
                #{lawName,jdbcType=VARCHAR},
            </if>
            <if test="lawClass != null">
                #{lawClass,jdbcType=VARCHAR},
            </if>
            <if test="illegalDescription != null">
